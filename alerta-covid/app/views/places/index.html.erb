<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Area</th>
      <%if user_signed_in? %>
        <th colspan="4"></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.area.name %></td>
        <% if place.are_there_active_cases?%>
          <td bgcolor="red"><%= place.active_cases_teen_days_ago%> active cases</td>
        <%end%>
        <td><%= link_to 'Show', place %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_place_path(place) %></td>
          <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in?%>
<%= link_to 'New Place', new_place_path %>
<% end%>
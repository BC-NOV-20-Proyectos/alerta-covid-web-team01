<div class="container-fluid">
  <h1 class="title">Report places</h1>
  <div class="row">
    <%= form_with url: "/reports/places", method: :get, class: "col-12" do |form| %>
    <div class="form-group row">
        <%= form.label :filter_by, class: "col-2 col-form-label"  %>
        <div class="col-2">
          <%= form.select(:option, options_for_select([['Places', 1], ['Areas', 2], ['Institutions', 3]]), {}, class: "form-control") %> 
        </div>
        <%= form.submit "filter", class: "btn btn-secondary mr-2" %>
        <%= form.submit "all", class: "btn btn-secondary" %>
    </div>	
    <% end %>
  </div>
  <%= render "report_by_places", attendaces: @reports %> 
</div>
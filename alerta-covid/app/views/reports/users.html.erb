<div class="container-fluid">
  <h1 class="title">report users</h1>

  <div class="">
    <%= form_with url: "/reports/users", method: :get do |form| %>
    <div class="row">
      <div class="form-group row col-3">
        <%= form.label :start, "Start:", class: "col-2 col-form-label"  %>
        <div class="col-10">
          <%= form.date_field :start, value: params[:start], class: "form-control" %>
        </div>
      </div>
      <div class="form-group row col-3">
        <%= form.label :finish, "Finish:", class: "col-2 col-form-label"  %>
        <div class="col-10">
           <%= form.date_field :finish, value: params[:finish], class: "form-control" %>
        </div>
      </div>
      <div>
        <%= form.submit "filter", class: "btn btn-secondary" %>
        <%= form.submit "all", class: "btn btn-secondary" %>
      </div>
    </div>	
    <% end %>

    <form action="<%= reports_users_path(format: :pdf) %>" method="get">
      <button class="btn btn-success btn-sm" type="submit" style="color: #FFFFFF;">Descargar pdf</button>
    </form>
  </div>

  <%= render "report_by_user", attendaces: @reports %>
</div>
<aside class="sidebar" id="sidebar">
	<div class="wrapper">
		<div class="side-item-home" id="side-item-home">
			<i class="fas fa-home"></i>
			<span>HOME</span>
		</div> 
		<% if (can? :index, Institution) %>
			<a class="side-item" id="side-item" href="/institutions">
				<i class="fas fa-building"></i>
				<span>Institutions</span>
			</a>
		<% end %>
		<% if (can? :index, Role) %>
			<a class="side-item" id="side-item" href="/roles">
				<i class="fas fa-user-tag"></i>
				<span>Roles</span>
			</a>
		<% end %>
		<% if (can? :index, User) %>
			<a class="side-item" id="side-item" href=<%= users_path %>>
				<i class="fas fa-users"></i>
				<span>Users</span>
			</a>	
		<% end %>	
		<% if (can? :index, Departament) %>
			<a class="side-item" id="side-item" href="/departaments">
				<i class="fas fa-users-cog"></i>
				<span>Departments</span>
			</a> 
		<% end %>
		<% if (can? :index, Area) %>
			<a class="side-item" id="side-item" href="/areas">
				<i class="fas fa-warehouse"></i>
				<span>Areas</span>
			</a>
		<% end %>
		<% if (can? :index, Place) %>
			<a class="side-item" id="side-item" href="/places">
				<i class="fas fa-map-marker-alt"></i>
				<span>Places</span>
			</a> 	
		<% end %>	 
		<% if (can? :index, Incidence) %>
			<a class="side-item" id="side-item" href="/incidences">
				<i class="fas fa-exclamation-circle"></i>
				<span>My Incidences</span>
			</a>
		<% end %>
		<% if can?(:users, ReportsController) && can?(:places, ReportsController) %>
			<div class="dropdown">
				<button class="btn dropdown-toggle btn-reports side-item" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fas fa-tasks"></i>
					<span>Reports</span>	 
				</button>
				<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
					<a class="dropdown-item" href=<%=reports_users_path%>>Reports by users</a>
					<a class="dropdown-item" href=<%= reports_places_path%>>Reports by places</a>
				</div>
			</div>
		<% end %>
	</div>
	<div class="wrapper">
		<a class="side-item icon" id="side-item" href=<%= edit_registration_path(current_user) %>>
			<i class="fas fa-edit"></i>
			<span>Edit Profile</span>
		</a> 
		<%= link_to destroy_session_path(current_user), class: "side-item icon", method: :delete do%>
			<i class="fas fa-sign-out-alt"></i>
			<span>Logout</span>
		<%end%>
	</div>
</aside>

<%= javascript_pack_tag 'layouts/sidebar' %>

<p id="notice"><%= notice %></p>
<div class="container">
  <h1 class="title">User Details</h1>
  <div class="card p-5 mt-4">
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Full Name:</strong>
      <%= "#{@user.full_name} #{@user.lastname}" %>
    </p>

    <p>
      <strong>Role:</strong>
      <%= @user&.role&.name %>
    </p>

    <p>
      <strong>Department:</strong>
      <%= @user&.departament&.name %>
    </p>

    <p>
      <strong>Gender:</strong>
      <%= @user.gender == "1" ?  "Men" : "Women" %>
    </p>

    <p>
      <strong>Born Date:</strong>
      <%= @user.born_date.strftime("%d/%m/%Y") if(@user.born_date) %>
    </p>
  </div>
</div>
<div class="container">
  <%= link_to :back, { class: "btn return-button mt-5 mb-5"} do %>
    <i class="fas fa-arrow-circle-left"></i>
    Back
  <% end %>
  <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-warning" %>
</div>
<p id='notice'><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Confirmed</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.confirmed_at.present? ? 'Confirmed' : 'Unconfirmed' %></td>
        <td>No Role</td>
        <td>No Actions</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_with(model: @user) do |form| %>
    <div class='form-group'>
        <label for=''>Email</label>
        <%= form.text_field :email, class: 'form-control', rows:'1', max: '25' %>
    </div>
    <%= form.submit%>
<% end %>
<p id="notice"><%= notice %></p>
<div class="container">
  <h1 class="title">Areas</h1>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Institution</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @areas.each do |area| %>
          <tr>
            <td><%= area.institution.name %></td>
            <td><%= area.name %></td>
            <td><%= link_to 'Show', area, class: "btn btn-success" %></td>
            <td><%= link_to 'Edit', edit_area_path(area), class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Area', new_area_path, class: "new-button" %>
</div>

<p id="notice"><%= notice %></p>
<div class="container">
  <h1 class="title">Areas</h1>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Institution</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @areas.each do |area| %>
          <tr>
            <td><%= area.institution.name %></td>
            <td><%= area.name %></td>
            <td><%= link_to 'Show', area, class: "btn btn-success" %></td>
            <td><%= link_to 'Edit', edit_area_path(area), class: "btn btn-warning" %></td>
            <td><%= button_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-2 mb-3 col-xs-12">
    <%= will_paginate(@areas, :renderer => WillPaginate::ActionView::LinkRenderer, class: 'pagination-sm justify-content-center') %>
  </div>

  <div class="mt-2 col-xs-12">
    <%= link_to 'New Area', new_area_path, class: 'new-button' %>
  </div>
</div>

<div class="container">
  <h1 class="title">Institutions</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @institutions.each do |institution| %>
        <tr>
          <td><%= institution.name %></td>
          <td><%= link_to 'Show', institution, class: "btn btn-success" %></td>
          <%if current_user.super_admin?%>
            <td><%= link_to 'Edit', edit_institution_path(institution), class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%if current_user.super_admin?%>
    <%= link_to 'New Institution', new_institution_path, class: "new-button" %>
  <%end%>
</div>

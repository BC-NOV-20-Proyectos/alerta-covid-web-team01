<div class="container container-form ">
  <h1 class="title">Institutions</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @institutions.each do |institution| %>
        <tr>
          <td><%= institution.name %></td>
          <td><%= link_to 'Show', institution, class: "btn btn-success" %></td>
          <%if current_user.super_admin?%>
            <td><%= link_to 'Edit', edit_institution_path(institution), class: "btn btn-warning" %></td>
            <td><%= button_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mt-2 mb-3 col-xs-12">
    <%= will_paginate(@institutions, :renderer => WillPaginate::ActionView::LinkRenderer, class: 'pagination-sm justify-content-center') %>
  </div>
  <%if current_user.super_admin?%>
    <div class="container">
      <div class="mt-2 col-xs-12">
        <%= link_to 'New Institution', new_institution_path, class: "new-button" %>
      </div>
    </div>
  <%end%>
</div>
